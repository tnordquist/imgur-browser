<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TitleText" parent="AppTheme">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="Description" parent="AppTheme">
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">@color/lightText</item>
  </style>

  <style name="FullScreenDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:statusBarColor">#280680</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
  </style>

</resources>
