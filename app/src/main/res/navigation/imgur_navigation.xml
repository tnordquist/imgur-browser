<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/imgur_navigation"
  app:startDestination="@id/detailFragment">

  <fragment
    android:id="@+id/listFragment"
    android:name="edu.cnm.deepdive.imgurbrowser.controller.GallerySearchFragment"
    android:label="fragment_list"
    tools:layout="@layout/gallery_list">
    <action
      android:id="@+id/action_go_to_detail"
      app:destination="@id/detailFragment"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim"/>
  </fragment>
  <fragment
    android:id="@+id/detailFragment"
    android:name="edu.cnm.deepdive.imgurbrowser.controller.SearchDetailFragment"
    android:label="fragment_detail"
    tools:layout="@layout/fragment_detail">
    <action
      android:id="@+id/action_go_to_list"
      app:destination="@id/listFragment"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim"/>
    <argument
      android:name="imageId"
      app:argType="integer"
      android:defaultValue="0"/>
  </fragment>
</navigation>